<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_cardview_itemid"
                android:layout_width="63dp"
                android:layout_height="23dp"
                android:layout_marginEnd="8dp"
                android:text="Item-ID"
                app:layout_constraintBottom_toBottomOf="@+id/txt_cardview_itemname"
                app:layout_constraintEnd_toStartOf="@+id/txt_cardview_quantity"
                app:layout_constraintTop_toTopOf="@+id/txt_cardview_itemname" />

            <TextView
                android:id="@+id/txt_cardview_warehouseid"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:text="Warehouse-ID"
                app:layout_constraintBottom_toBottomOf="@+id/txt_cardview_itemname"
                app:layout_constraintEnd_toStartOf="@+id/txt_cardview_itemid"
                app:layout_constraintTop_toTopOf="@+id/txt_cardview_itemname"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txt_cardview_quantity"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:layout_marginEnd="8dp"
                android:text="Quantity"
                app:layout_constraintBottom_toBottomOf="@+id/txt_cardview_itemid"
                app:layout_constraintEnd_toStartOf="@+id/imageView_cardview"
                app:layout_constraintTop_toTopOf="@+id/txt_cardview_itemid"
                app:layout_constraintVertical_bias="0.625" />

            <TextView
                android:id="@+id/txt_cardview_itemname"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:text="Item-name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_cardview_itemid"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.551" />

            <ImageView
                android:id="@+id/imageView_cardview"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.985"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>