<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#923B3EFF">

    <TextView
        android:id="@+id/textView"
        android:layout_width="223dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/hind"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#F8F5F5"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_SignUp"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#A300BCD4"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_SignUpPassword"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/edtxt_SignUpPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_SignUpConfirmPassword" />

    <EditText
        android:id="@+id/edtxt_SignUpEmail"
        android:layout_width="341dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#CCFFFFFF"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtxt_SignUpPassword"
        android:layout_width="335dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#CCFFFFFF"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_SignUpEmail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtxt_SignUpEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_SignUpEmail" />

    <EditText
        android:id="@+id/edtxt_SignUpConfirmPassword"
        android:layout_width="335dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#CCFFFFFF"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_SignUpEmail"
        app:layout_constraintStart_toStartOf="@+id/edtxt_SignUpEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_SignUpPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Already have an Account?"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_SignUp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="Sign In!"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>