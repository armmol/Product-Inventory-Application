<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:background="#DD0808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_card_for_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#97F1F1F1">

            <TextView
                android:id="@+id/txt_cardviewhistory_action"
                android:layout_width="209dp"
                android:layout_height="33dp"
                android:background="#5B4CAF50"
                android:text="Action"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/txt_cardviewhistory_user"
                app:layout_constraintEnd_toEndOf="@+id/txt_cardviewhistory_time"
                app:layout_constraintStart_toStartOf="@+id/txt_cardviewhistory_time"
                app:layout_constraintTop_toTopOf="@+id/txt_cardviewhistory_user" />

            <TextView
                android:id="@+id/txt_cardviewhistory_time"
                android:layout_width="208dp"
                android:layout_height="35dp"
                android:background="#8DF44336"
                android:text="Time"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/txt_cardviewhistory_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_cardviewhistory_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_cardviewhistory_name"
                android:layout_width="202dp"
                android:layout_height="35dp"
                android:background="#772196F3"
                android:text="Name"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/txt_cardviewhistory_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_cardviewhistory_user"
                android:layout_width="202dp"
                android:layout_height="33dp"
                android:background="#43FFEB3B"
                android:text="User"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txt_cardviewhistory_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/txt_cardviewhistory_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_cardviewhistory_name"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>