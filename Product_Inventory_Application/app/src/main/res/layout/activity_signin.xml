<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#923B3EFF">

    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="76dp"
        android:layout_marginTop="100dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#F8F5F5"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_SignIn"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#A300BCD4"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_SignInPassword"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/edtxt_SignInPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_SignInPassword" />

    <EditText
        android:id="@+id/edtxt_SignInEmail"
        android:layout_width="341dp"
        android:layout_height="69dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#CCFFFFFF"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtxt_SignInPassword"
        android:layout_width="335dp"
        android:layout_height="78dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#CCFFFFFF"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_SignInEmail"
        app:layout_constraintStart_toStartOf="@+id/edtxt_SignInEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_SignInEmail" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Don't have an Account?"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_SignIn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="Sign Up!"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#F3EEEE"
        app:layout_constraintBottom_toTopOf="@+id/btn_SignIn"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_SignInPassword"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/edtxt_SignInPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_SignInPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>